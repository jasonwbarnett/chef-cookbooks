# globals
daily
rotate <%= node['bw_logrotate']['globals']['rotate'] %>
maxage <%= node['bw_logrotate']['globals']['maxage'] %>
compresscmd <%= node['bw_logrotate']['globals']['compresscmd'] %>
copytruncate
compress
notifempty
missingok
<% if node['bw_logrotate']['globals']['size'] -%>
size  <%= node['bw_logrotate']['globals']['size'] %>
<% end -%>

<% node['bw_logrotate']['configs'].to_hash.each do |name, block| -%>
## bw.bw_logrotate.configs.<%= name %>
<%=  block['files'].join(' ') %> {
<%   if block['time'] -%>
  <%= block['time'] %>
<%   end -%>
<%   if block['overrides'] -%>
<%     block['overrides'].keys.sort.each do |k| -%>
<%       case k -%>
<%       when 'rotate', 'maxage', 'minsize', 'create', 'olddir', 'su', 
              'compressoptions', 'dateformat' -%>
  <%=      k %> <%= block['overrides'][k] %>
<%       when 'copytruncate', 'ifempty', 'nocompress', 'missingok',
              'delaycompress', 'sharedscripts', 'nomail', 'dateext',
              'nodateext', 'noolddir', 'nocopytruncate' -%>
<%#        check that the value is true -%>
<%         if block['overrides'][k] -%>
  <%=        k %>
<%         end -%>
<%       when 'postrotate', 'prerotate' -%>
  <%=      k %>
    <%=    block['overrides'][k] %>
  endscript
<%       end -%>
<%     end -%>
<%   end -%>
}

<% end -%>
